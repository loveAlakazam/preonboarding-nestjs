{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "moduleNameMapper": {
    "^@src/(.*)$": "<rootDir>/../src/$1",
    "^@users/(.*)$": "<rootDir>/../src/modules/users/$1",
    "^@boards/(.*)$": "<rootDir>/../src/modules/boards/$1",
    "^@comments/(.*)$": "<rootDir>/../src/modules/comments/$1"
  },
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
